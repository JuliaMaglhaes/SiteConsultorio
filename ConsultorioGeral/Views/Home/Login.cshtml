@model Paciente
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Carregamento.cshtml";
}

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">
                <form class="login100-form validate-form flex-sb flex-w">
                    <span class="login100-form-title p-b-51">
                        Login
                    </span>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="O E-MAIL É REQUERIDO">
                        <input asp-for="Email" class="input100" type="text" name="username" placeholder="E-mail">
                        <span class="focus-input100"></span>                           
                    </div>


                    <div class="wrap-input100 validate-input m-b-16" data-validate="O CPF É REQUERIDO !">
                        <input asp-for="Cpf" class="input100" type="password" name="pass" placeholder="CPF">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-24">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Lembre-se de mim
                            </label>
                        </div>
                    </div>
                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn">
                            Entrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="dropDownSelect1"></div>
</body>