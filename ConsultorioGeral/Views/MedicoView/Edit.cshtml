@model ConsultorioGeral.Models.Medico

@{
    ViewData["Title"] = "Editar | Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="page-give-classes">
    <div id="container">
        <header class="page-header">
            <div class="top-bar-container">
                <a href="/">
                    <img src="~/img/back.svg">
                </a>
                <img src="~/img/warning.svg">
            </div>

            <div class="header-content">
                <strong> Cadastro de médico </strong>
                <p> Atualizar médico </p>

            </div>
        </header>

        <main>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MedicoId" />
                        <div class="input-block">
                            <label asp-for="Nome" class="input-block"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="input-block">
                            <label asp-for="Crm" class="input-block"></label>
                            <input asp-for="Crm" type="number" class="form-control" />
                            <span asp-validation-for="Crm" class="text-danger"></span>
                        </div>
                        <div class="select-block">
                            <label asp-for="Especialidade" class="select-block"></label>
                            <select asp-for="Especialidade" id="especialidade" required>
                                <option value=""> Selecione uma opção </option>
                                <option value="1">Clinico geral</option>
                                <option value="2">Pediatra</option>
                                <option value="3">Otorinolaringologista</option>

                            </select>
                            <span asp-validation-for="Especialidade" class="text-danger"></span>
                        </div>
                        <div class="input-block">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <footer>
                <div>
                    <a asp-action="Index">Exibir lista</a>
                </div>
            </footer>
            </main>
        </div>
    </body>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
