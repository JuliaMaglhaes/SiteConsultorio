@model ConsultorioGeral.Models.Consulta

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="page-give-classes">
    <div id="container">
        <header class="page-header">
            <div class="top-bar-container">
                <a href="/">
                    <img src="~/img/back.svg">
                </a>
                <img src="images/logo.svg">
            </div>

            <div class="header-content">
                <strong> Cadastro de consulta </strong>
                <p> Preencha corretamente todos os campos </p>

            </div>
        </header>

        <main>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <fieldset>
                            <legend> Seus dados </legend>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="input-block">
                                <label asp-for="Data" class="input-block"></label>
                                <input asp-for="Data" type="datetime-local" class="form-control" />
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>
                            <div class="input-block">
                                <label asp-for="Sintomas" class="input-block"></label>
                                <input asp-for="Sintomas" class="form-control" />
                                <span asp-validation-for="Sintomas" class="text-danger"></span>
                            </div>
                            <div class="input-block">
                                <label asp-for="Cpf" class="input-block"></label>
                                <input asp-for="Cpf" class="form-control" />
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                            <div class="select-block">
                                <label asp-for="MedicoEsp" class="input-block"></label>
                                <select asp-for="MedicoEsp" id="sexo" required>
                                    <option value=""> Selecione uma opção </option>
                                    <option value="1">Clínico geral</option>
                                    <option value="2">Pediatra</option>
                                    <option value="3">Neurologista</option>
                                    <option value="4">Endocrinologista</option>
                                    <option value="5">Fisioterapeuta</option>
                                    <option value="6">Otorrinolaringologista</option>
                                </select>
                                <span asp-validation-for="MedicoEsp" class="text-danger"></span>
                            </div>
                            </fieldset>
                        <footer>
                            <div class="input-block">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </footer>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            </main>
        </div>
    </body>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
