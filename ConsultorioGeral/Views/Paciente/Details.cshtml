@model ConsultorioGeral.Models.Paciente
@using ConsultorioGeral.Models
@{ ViewData["Title"] = "Detalhes | Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<Consulta> consultas = ViewBag.Consultas; }

<body id="page-give-classes">
    <div id="container">
        <header class="page-header">
            <div class="top-bar-container">
                <a href="/">
                    <img src="~/img/back.svg">
                </a>
                <img src="~/img/warning.svg">
            </div>

            <div class="header-content">
                <strong> Cadastro de Paciente </strong>
                <p> Preencha corretamente todos os campos </p>

            </div>
        </header>

        <main>

            <div>
                <h4>Paciente</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cpf)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cpf)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Idade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Idade)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Sexo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Sexo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Endereco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Endereco)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cep)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cep)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefone)
                    </dd>
                </dl>
            </div>
            <div>
                @foreach (var consulta in consultas)
                {
    <div>
        <p>@consulta.Medico.Nome</p>
        <p>@consulta.Sintomas</p>
        <p>@consulta.Data</p>
    </div>}
            </div>
            <footer>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.PacienteId">
                        <img src="~/img/editButton.svg" wdit="42" height="42" alt="Editar" />
                    </a>
                    <a asp-action="Index">Exibir lista</a>
                </div>
            </footer>
        </main>
    </div>
</body>

