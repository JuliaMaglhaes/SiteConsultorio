@model Paciente
@{ ViewData["Title"] = "Paciente"; }


<body id="page-give-classes">
    <div id="container">
        <header class="page-header">
            <div class="top-bar-container">
                <a href="/">
                    <img src="~/img/back.svg">
                </a>
                <div class="input-block">
                    <a asp-action="Index" class="btn btn-info">Retornar pacientes </a> <!--Local que exibe os pacientes cadastrados-->
                </div>
                </div>
                <div class="header-content">
                    <strong> Cadastro de Paciente </strong>
                    <p>
                        Preencha corretamente os seus
                        dados para evitar problemas
                    </p>

                </div>
</header>

        <main>

            <form method="post" id="create-class">

                <fieldset>
                    <legend> Seus dados </legend>

                    <div class="input-block">
                        <label asp-for="Nome" class="nome"> Nome completo </label>
                        <input asp-for="Nome" id="name" required>
                    </div>

                    <div class="input-block">
                        <label asp-for="Cpf" class="cpf"> CPF <small>(somente números)</small> </label>
                        <input asp-for="Cpf" id="cpf" type="number" required>
                    </div>

                    <div class="input-block">
                        <label asp-for="Idade" class="idade"> Idade  </label>
                        <input asp-for="Idade" id="idade" type="number" required>
                    </div>

                    <div class="select-block">
                        <label asp-for="Sexo"> Sexo </label>
                        <select asp-for="Sexo" id="sexo" required>
                            <option value=""> Selecione uma opção </option>
                            <option value="1">Feminino</option>
                            <option value="2">Masculino</option>
                            <option value="3">Outro</option>

                        </select>

                    </div>

                    <div class="input-block">
                        <label asp-for="Telefone" class="telefone"> Telefone <small>(somente números)</small> </label>
                        <input asp-for="Telefone" id="telefone" type="number" required>
                    </div>

                    <div class="input-block">
                        <label asp-for="Email" class="email"> Email  </label>
                        <input asp-for="Email" id="email" type="email" required>
                    </div>

                    <div class="input-block">
                        <label asp-for="Endereco" class="endereco"> Endereço  </label>
                        <input asp-for="Endereco" id="endereco" required>
                    </div>

                    <div class="input-block">
                        <label asp-for="Cep" class="cep"> CEP </label>
                        <input asp-for="Cep" id="cep" required>
                    </div>


                </fieldset>
            </form>
            <footer>
                <p>
                    <img src="~/img/warning.svg" alt="aviso">
                    Importante! <br>
                    Preencha todos os dados
                </p>
                <div class="input-block">
                    <button asp-action="Index" type="submit" form="create-class"> Salvar Cadastro </button>
                </div>
            </footer>
        </main>
    </div>
</body>

