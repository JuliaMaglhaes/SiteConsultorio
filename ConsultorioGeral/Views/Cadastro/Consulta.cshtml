@model ConsultorioGeral.Models.Consulta
@using ConsultorioGeral.Enums

@{ ViewData["Title"] = "Marcar | Consulta ";}

<body id="page-give-classes">
    <div id="container">
        <header class="page-header">
            <div class="top-bar-container">
                <a href="/">
                    <img src="~/img/back.svg">
                </a>
                <img src="~/img/warning.svg">
            </div>

            <div class="header-content">
                <strong> Cadastro de consulta </strong>
                <p> Preencha corretamente todos os campos </p>

            </div>
        </header>

        <main>

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <fieldset>
                            <legend> Seus dados </legend>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="input-block">
                                <label asp-for="Data" class="input-block"></label>
                                <input asp-for="Data" type="datetime-local" class="form-control" />
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>
                            <div class="input-block">
                                <label asp-for="Sintomas" class="input-block"></label>
                                <textarea asp-for="Sintomas" class="form-control"> </textarea>
                                <span asp-validation-for="Sintomas" class="text-danger"></span>
                            </div>
                            <div class="input-block">
                                <label asp-for="Cpf" class="input-block"></label>
                                <input asp-for="Cpf" class="form-control" />
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                            <div class="select-block">
                                <label class="input-block">Especialidade</label>
                                <select id="select-especialidade" asp-items="Html.GetEnumSelectList<Especialidade>()">
                                    <option selected="selected" value="">Selecione a Especialidade</option>
                                </select>
                            </div>

                            <div class="select-block">
                                <label class="input-block">Médico</label>
                                <select asp-for="MedicoId" id="select-medicos">
                                    <option value="">Selecione o Médico</option>
                                </select>
                            </div>

                        </fieldset>
                        <footer>
                            <div class="input-block">
                                <input type="submit" value="Marcar Consulta" class="btn btn-primary" />
                                <a asp-action="Index">Visualizar consultas agendadas</a>
                            </div>
                        </footer>
                    </form>
                </div>
            </div>


        </main>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
